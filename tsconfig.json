{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
  },
  "basePath": "./",
  "paths": {
    "#app/*": ["src/*"],
  },
  "include": ["/src/"],
  "references": [{ "path": "./tsconfig.node.json"}]
}
